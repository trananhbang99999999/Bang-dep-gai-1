<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Chứng Chỉ Views -->
        <record id="view_chung_chi_form" model="ir.ui.view">
            <field name="name">chung_chi form</field>
            <field name="model">chung_chi</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Chứng Chỉ</div>
                        <group col="4" string="Thông tin chứng chỉ">
                            <field name="nhan_vien_id"/>
                            <field name="ten_chung_chi"/>
                            <field name="cap_tho_chap"/>
                            <field name="ngay_cap"/>
                            <field name="ngay_het_han"/>
                            <field name="so_chung_chi"/>
                        </group>
                        <group col="4" string="Tệp đính kèm">
                            <field name="file_chung_chi"/>
                            <field name="file_name"/>
                        </group>
                        <group col="4" string="Mô tả">
                            <field name="mo_ta" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_chung_chi_tree" model="ir.ui.view">
            <field name="name">chung_chi tree</field>
            <field name="model">chung_chi</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nhan_vien_id"/>
                    <field name="ten_chung_chi"/>
                    <field name="cap_tho_chap"/>
                    <field name="ngay_cap"/>
                    <field name="ngay_het_han"/>
                </tree>
            </field>
        </record>

        <record id="view_chung_chi_search" model="ir.ui.view">
            <field name="name">chung_chi search</field>
            <field name="model">chung_chi</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nhan_vien_id"/>
                    <field name="ten_chung_chi"/>
                    <field name="cap_tho_chap"/>
                </search>
            </field>
        </record>

        <record id="action_chung_chi" model="ir.actions.act_window">
            <field name="name">Chứng Chỉ</field>
            <field name="res_model">chung_chi</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_chung_chi_search"/>
        </record>
    </data>
</odoo>