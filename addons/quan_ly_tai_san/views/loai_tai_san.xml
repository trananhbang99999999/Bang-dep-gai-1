<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Loại Tài Sản Views -->
        <record id="view_loai_tai_san_form" model="ir.ui.view">
            <field name="name">loai_tai_san form</field>
            <field name="model">loai_tai_san</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Loại Tài Sản</div>
                        <group col="4" string="Thông tin loại tài sản">
                            <field name="ten_loai"/>
                            <field name="ma_loai"/>
                            <filed name="mo_ta"/>
                            <field name="muc_luong_co_ban"/>
                        </group>
                        <group col="4" string="Mô tả">
                            <field name="mo_ta" nolabel="1" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_loai_tai_san_tree" model="ir.ui.view">
            <field name="name">loai_tai_san tree</field>
            <field name="model">loai_tai_san</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_loai"/>
                    <field name="ten_loai"/>
                    <field name="mo_ta"/>
                    <field name="muc_luong_co_ban"/>
                </tree>
            </field>
        </record>

        <record id="view_loai_tai_san_search" model="ir.ui.view">
            <field name="name">loai_tai_san search</field>
            <field name="model">loai_tai_san</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_loai"/>
                    <field name="ten_loai"/>
                </search>
            </field>
        </record>

        <record id="action_loai_tai_san" model="ir.actions.act_window">
            <field name="name">Loại Tài Sản</field>
            <field name="res_model">loai_tai_san</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_loai_tai_san_search"/>
        </record>
    </data>
</odoo>