<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hop_dong_form" model="ir.ui.view">
            <field name="name">hop_dong.form</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <form string="Hợp đồng">
                    <sheet>
                        <group col="4" string="Thông tin hợp đồng">
                            <field name="so_hd"/>
                            <field name="loai_hop_dong"/>
                            <field name="ngay_ky"/>
                            <field name="ngay_het_han"/>
                            <field name="trang_thai"/>
                            <field name="nhan_vien_id"/>
                        </group>
                        <group col="4" string="Thông tin lương">
                            <field name="luong_co_ban"/>
                            <field name="phu_cap"/>
                        </group>
                        <group string="Mô tả">
                            <field name="mo_ta" nolabel="1"/>
                        </group>
                        <group string="Ghi chú">
                            <field name="ghi_chu" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hop_dong_tree" model="ir.ui.view">
            <field name="name">hop_dong.tree</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <tree string="Hợp đồng">
                    <field name="so_hd"/>
                    <field name="nhan_vien_id"/>
                    <field name="loai_hop_dong"/>
                    <field name="ngay_ky"/>
                    <field name="ngay_het_han"/>
                    <field name="trang_thai"/>
                    <field name="luong_co_ban"/>
                </tree>
            </field>
        </record>

        <record id="view_hop_dong_search" model="ir.ui.view">
            <field name="name">hop_dong.search</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <search>
                    <field name="so_hd"/>
                    <field name="nhan_vien_id"/>
                    <filter name="filter_hieu_luc" string="Có hiệu lực" domain="[('trang_thai','=','hieu_luc')]"/>
                    <filter name="filter_het_han" string="Hết hạn" domain="[('trang_thai','=','het_han')]"/>
                    <filter name="filter_cham_dut" string="Chấm dứt" domain="[('trang_thai','=','cham_dut')]"/>
                </search>
            </field>
        </record>

        <record id="action_hop_dong" model="ir.actions.act_window">
            <field name="name">Hợp đồng</field>
            <field name="res_model">hop_dong</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hop_dong_search"/>
        </record>

    </data>
</odoo>
