<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- FORM VIEW -->
        <record id="view_cham_cong_form" model="ir.ui.view">
            <field name="name">cham_cong.form</field>
            <field name="model">cham_cong</field>
            <field name="arch" type="xml">
                <form string="Chấm công">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="nhan_vien_id" string="Nhân viên" />
                            </h1>
                        </div>

                        <group col="4" string="Thông tin chấm công">
                            <field name="ngay_cham_cong" />
                            <field name="trang_thai" widget="badge" />
                        </group>

                        <group col="4" string="Thời gian làm việc">
                            <field name="gio_vao" placeholder="HH:MM:SS" />
                            <field name="gio_ra" placeholder="HH:MM:SS" />
                            <field name="so_gio_lam" readonly="1" />
                        </group>

                        <group col="4" string="Thời gian nghỉ">
                            <field name="gio_nghi_bat_dau" readonly="1" />
                            <field name="gio_nghi_ket_thuc" readonly="1" />
                        </group>

                        <group string="Ghi chú">
                            <field name="ghi_chu" nolabel="1" />
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="view_cham_cong_tree" model="ir.ui.view">
            <field name="name">cham_cong.tree</field>
            <field name="model">cham_cong</field>
            <field name="arch" type="xml">
                <tree string="Chấm công">
                    <field name="ngay_cham_cong" />
                    <field name="nhan_vien_id" />
                    <field name="gio_vao" />
                    <field name="gio_ra" />
                    <field name="so_gio_lam" />
                    <field name="trang_thai" widget="badge" />
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="view_cham_cong_search" model="ir.ui.view">
            <field name="name">cham_cong.search</field>
            <field name="model">cham_cong</field>
            <field name="arch" type="xml">
                <search string="Chấm công">
                    <field name="ngay_cham_cong" />
                    <field name="nhan_vien_id" />
                    <field name="trang_thai" />
                    <separator />
                    <filter name="co_mat" string="Có mặt" domain="[('trang_thai', '=', 'co_mat')]" />
                    <filter name="di_muon" string="Đi muộn"
                        domain="[('trang_thai', '=', 'di_muon')]" />
                    <filter name="ve_som" string="Về sớm" domain="[('trang_thai', '=', 've_som')]" />
                    <filter name="vang" string="Vắng" domain="[('trang_thai', '=', 'vang')]" />
                    <filter name="nghi_phep" string="Nghỉ phép"
                        domain="[('trang_thai', '=', 'nghi_phep')]" />
                </search>
            </field>
        </record>

        <!-- ACTION VIEW -->
        <record id="action_cham_cong" model="ir.actions.act_window">
            <field name="name">Chấm công</field>
            <field name="res_model">cham_cong</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo bản ghi chấm công mới
                </p>
            </field>
        </record>


    </data>
</odoo>